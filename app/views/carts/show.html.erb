<p id="notice"><%= notice %></p>

<h2>Your Cart</h2>

<table>
  <% total_price = 0.0 %>
  <% @cart.line_items.each do |item| %>
    <% price = LineItem.total_price(item.quantity, item.food.price) %>
    <% total_price = Cart.total_price(total_price, price) %>
    <tr>
      <td><%= item.quantity %> Ã—</td>
      <td><%= item.food.name %></td>
      <td class="item_price"><%= number_to_currency(price, unit: "Rp ", delimiter: ".", separator: ",") %></td>
    </tr>
    <% total_price %>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(total_price, unit: "Rp ", delimiter: ".", separator: ",") %></td>
  </tr>
</table>