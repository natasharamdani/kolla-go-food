<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Review:</strong>
  <% @restaurant.reviews.each do |review| %>
  	Name: <%= review.reviewer %>,
  	Title: <%= review.title %>,
  	Review: <%= review.description %>
  <% end %>
</p>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
