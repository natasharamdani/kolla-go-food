<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @food.description %>
</p>

<p>
  <strong>Category:</strong>
  <%= @food.category.name unless @food.category.blank? %>
</p>

<p>
  <strong>Tag:</strong>
  <% @food.tag.each do |tag| %>
    <%= tag.name %>,
  <% end %>
</p>

<p>
  <strong>Image URL:</strong>
  <%= @food.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @food.price %>
</p>

<%= link_to 'Edit', edit_food_path(@food) %> |
<%= link_to 'Back', foods_path %>